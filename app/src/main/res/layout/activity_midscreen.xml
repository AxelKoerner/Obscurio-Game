<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/background2"
        tools:context="de.hft.ubq.Midscreen">

    <TextView
            android:layout_width="331dp"
            android:layout_height="95dp"
            android:id="@+id/runden"
            android:autoSizeTextType="uniform"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/leben"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:text="Runden"
            android:textAlignment="center"
            android:fontFamily="@font/roboto_black"
            android:textStyle="bold"
            android:background="@drawable/background"/>

    <TextView
            android:text="Leben"
            android:layout_width="331dp"
            android:layout_height="95dp"
            android:id="@+id/leben"
            android:autoSizeTextType="uniform"
            app:layout_constraintBottom_toBottomOf="parent"
            android:textAlignment="center"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:fontFamily="@font/roboto_black"
            android:textStyle="bold"
            android:background="@drawable/background"/>

    <Button
            android:text="Weiter"
            android:layout_width="202dp"
            android:layout_height="76dp"
            android:id="@+id/continueMidscreen"
            android:background="@drawable/custom_button"
            app:layout_constraintEnd_toEndOf="parent"
            android:drawableEnd="@drawable/ic_baseline_play_arrow_24"
            android:paddingRight="30dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/leben"
            app:layout_constraintBottom_toBottomOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>