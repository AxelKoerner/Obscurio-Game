<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_gameboard"
    android:id="@+id/mainGM"
    tools:context="de.hft.ubq.MainActivity">


    <ProgressBar
            android:id="@+id/progressbar"
            style="@android:style/Widget.ProgressBar.Horizontal"
            android:layout_width="267dp"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="67dp"
            android:layout_marginBottom="548dp"
            android:max="100"
            android:layout_centerInParent="true" />

    <ImageButton
            android:id="@+id/Picture1_gm"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="110dp"
            android:layout_height="110dp"
            android:layout_alignParentStart="true"
            android:layout_marginStart="158dp"
            android:adjustViewBounds="true"
            android:background="@drawable/button"
            android:scaleType="fitCenter"
            android:src="@drawable/monk"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView"
            tools:ignore="MissingConstraints"
            android:layout_marginTop="89dp"
            android:layout_alignParentTop="true" />

    <ImageButton
            android:id="@+id/Picture2_gm"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="110dp"
            android:layout_height="110dp"
            android:layout_alignParentStart="true"
            android:layout_marginStart="153dp"
            android:adjustViewBounds="true"
            android:background="@drawable/button"
            android:scaleType="fitCenter"
            android:src="@drawable/monk"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView"
            tools:ignore="MissingConstraints"
            android:layout_marginTop="20dp"
            android:layout_below="@+id/Picture1_gm" />

    <ImageButton
            android:id="@+id/Picture3_gm"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="110dp"
            android:layout_height="110dp"
            android:layout_alignParentStart="true"
            android:layout_marginStart="157dp"
            android:layout_marginTop="16dp"
            android:adjustViewBounds="true"
            android:background="@drawable/button"
            android:scaleType="fitCenter"
            android:src="@drawable/monk"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView"
            tools:ignore="MissingConstraints"
            android:layout_below="@+id/Picture2_gm" />

    <ImageView
            android:id="@+id/Arrow"
            android:layout_width="102dp"
            android:layout_height="99dp"
            android:layout_alignParentLeft="true"
            android:src="@drawable/arrow"
            android:layout_marginLeft="164dp"
            android:layout_marginTop="87dp"
            android:layout_below="@+id/Picture3_gm" />
</RelativeLayout>